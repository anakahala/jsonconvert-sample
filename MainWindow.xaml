<Window x:Class="WpfJsonConverterSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfJsonConverterSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="BtnSerialize" Click="BtnSerialize_Click" BorderBrush="Black" Width="100" Height="50">シリアライズ</Button>
            <Button x:Name="BtnDeserialize" Click="BtnDeserialize_Click" BorderBrush="Black" Width="100" Height="50">デシリアライズ</Button>
        </StackPanel>
    </Grid>
</Window>
